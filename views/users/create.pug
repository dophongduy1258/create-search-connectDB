extends ../layouts/common.pug

block content
	h1 Create User

	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="post",action="/users/create", enctype="multipart/form-data")
		.form-group
			label(for="name") name 
			input#name.form-control(type="text", name="name", value= values ? values.name : "")
			span &nbsp;
			
		.form-group
			label(for="phone") phone 
			input#phone.form-control(type="text", name="phone", value= values ? values.phone : "")
			span &nbsp;

		.form-group
			label(for="avatar") image 
			input#avatar.form-control-file(type="file", name="avatar", value= values ? values.avatar : "")
			span &nbsp;
			
			button.btn.btn-primary Create  