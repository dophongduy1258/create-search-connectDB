extends ../layouts/common.pug

block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="post",action="/login")
		.form-group
			label(for="email") Email
			input#email.form-group(type="text",name="email",value= values ? values.email : "")

		.form-group
			label(for="password") Password
			input#password.form-group(type="password",name="password",value= values ? values.password : "")
		button.btn.btn-primary Login
